{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["src/*"],
            "#components": ["./src/types/components"]
        },
        "jsx": "preserve",
        "preserveSymlinks": true
    },
    "include": [
       "src/**/*",
       "demo/**/*",
       "docs/**/*",
       "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "docs",
        "dist"
    ]
}